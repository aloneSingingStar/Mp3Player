<?xml version="1.0" encoding="utf-8"?>
    <!-- android:drawSelectorOnTop="true"不知道啥作用-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_openaccount">
  <include layout="@layout/view_account_open_progress"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_province"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="省/市/区"
                android:gravity="center"
                android:textSize="16sp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"/>
            <ImageView
                android:id="@+id/Iv_province"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow"
                android:layout_marginLeft="-50dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"/>
            <Spinner
                android:id="@+id/sp_province"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_province"
                android:layout_toLeftOf="@id/Iv_province"
                android:background="@null"
                android:drawSelectorOnTop="true">
            </Spinner>
            </RelativeLayout>
        <include layout="@layout/view_account_open_divider"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_city"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="城市"
                android:gravity="center"
                android:textSize="16sp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>
            <ImageView
                android:id="@+id/Iv_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow"
                android:layout_marginLeft="-50dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"/>
            <Spinner
                android:id="@+id/sp_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_city"
                android:layout_toLeftOf="@id/Iv_city"
                android:background="@null"
                android:drawSelectorOnTop="true">
            </Spinner>
        </RelativeLayout>
        <include layout="@layout/view_account_open_divider"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_department"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="营业部"
                android:gravity="center"
                android:textSize="16sp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>
            <ImageView
                android:id="@+id/Iv_department"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow"
                android:layout_marginLeft="-50dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"/>
            <Spinner
                android:id="@+id/sp_department"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_department"
                android:layout_toLeftOf="@id/Iv_department"
                android:background="@null"
                android:drawSelectorOnTop="true">
            </Spinner>
        </RelativeLayout>
        <include layout="@layout/view_account_open_divider"></include>
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="下一步"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_roundcorner_red"/>
    <include layout="@layout/view_account_open_divider"></include>
</LinearLayout>