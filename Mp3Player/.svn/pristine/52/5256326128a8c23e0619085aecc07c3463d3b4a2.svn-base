<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.founder.mp3player" >
    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="21" />

    <!-- 网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- SD卡访问权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainTabActivity"
            android:label="@string/title_activity_main_tab" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".service.DownloadService" />

        <activity
            android:name=".activity.NotificationActivity"
            android:label="@string/title_activity_notification" >
        </activity>

       <activity
            android:name=".activity.Mp3ListActivity"
            android:label="Mp3ListActivity" >
        </activity>
        <activity android:name=".activity.LocalMp3ListActivity"
            android:label="LocalMp3ListActivity">
        </activity>

    </application>
</manifest>
